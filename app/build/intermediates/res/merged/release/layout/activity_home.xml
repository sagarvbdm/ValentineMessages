<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dp.a2017sexyvalentinemessages.Home">

    <TextView
        android:text="2017 sexy valentine messages"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <Button
        android:text="Rose Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/rose"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:text="Propose Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_below="@+id/rose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/propose"
        android:background="@color/colorPrimaryDark"/>

    <Button
        android:text="Chocolate Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/propose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/chocolate" />

    <Button
        android:text="Teddy Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/chocolate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/teddy" />

    <Button
        android:text="Promise Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/teddy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/promise" />

    <Button
        android:text="Hug Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/promise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/hug" />

    <Button
        android:text="Kiss Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/hug"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/kiss" />

    <Button
        android:text="Valentine's Day"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/kiss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/valentine" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7341848752460960/8250802732"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
